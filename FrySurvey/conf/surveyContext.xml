<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd 
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- ANNOTATIONS POUR L'INJECTION DE DEPENDANCES -->
	<context:annotation-config />

	<!-- ANNOTATIONS POUR LA CREATION DE BEANS -->
	<context:component-scan base-package="fr.fryscop.probe" />


	<!-- Type de sonde -->
	<bean id="probeTypeDns" class="fr.fryscop.probe.ProbeType.Dns"/>
	<bean id="probeTypeRdds" class="fr.fryscop.probe.ProbeType.Rdds"/>
	<bean id="probeTypeEpp" class="fr.fryscop.probe.ProbeType.Epp"/>
	
	<!-- Status de sonde -->
	<bean id="probeStatusOk" class="fr.fryscop.probe.ProbeStatus.Ok"/>
	<bean id="probeStatusStopped" class="fr.fryscop.probe.ProbeStatus.Stopped"/>
	<bean id="probeStatusUnavailable" class="fr.fryscop.probe.ProbeStatus.Unavailable"/>
	
	<!-- Type de sonde -->
	<bean id="rdds" class="fr.fryscop.probe.Probe">
	    	<property name="name" value="RDDS" />
	    	<property name="type" ref="probeTypeRdds" />
	    	<property name="status" ref="probeStatusOk" />
	</bean>
	<bean id="dns" class="fr.fryscop.probe.Probe">
	    	<property name="name" value="DNS" />
	    	<property name="type" ref="probeTypeDns" />
	    	<property name="status" ref="probeStatusOk" />
	</bean>
	<bean id="epp" class="fr.fryscop.probe.Probe">
	    	<property name="name" value="EPP" />
	    	<property name="type" ref="probeTypeEpp" />
	    	<property name="status" ref="probeStatusOk" />
	</bean>
</beans>